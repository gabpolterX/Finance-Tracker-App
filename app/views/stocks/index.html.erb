<h1 class="mt-2">My Portfolio</h1>

<div class="search-area">
    <h3>Search Stocks</h3>
    <%= form_with url: stocks_path, method: :get, data: { turbo: false}, remote: true do %>
        <div class="form-group row">
            <div class="col-sm-9" no-right-padding>
                <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
            </div>
            <div class="col-sm-3 no-left-padding ">
                <%= button_tag type: :submit, class: "btn btn-success" do %>
                    <%= fa_icon 'search 2x' %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>

<div class="results" id="results">
    <%= render 'stocks/result' %>
</div>

<% if @tracked_stocks.present? %>
    <%= render 'list' %>       
<% end %>
